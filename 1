#include<iostream>

#include<vector>
#include<math.h>
#include<string>
#include<algorithm>
#include<iomanip>
using namespace std;
typedef long long int1;
#define maxn 500
int1 a[maxn + 5];
void step (int1 n) {
	a[1] = 1; 
	a[2] = 1; 
	a[3] = 1;
	a[4] = 1;
	for (int1 i = 5; i <= n; i++)
		a[i] = a[i - 2] + a[i - 3];
}
int main() {
	int1 n; 
	cin >> n;
	step(n);
	cout << a[n];
}
